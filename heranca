class Contato{
    private: 
    date data;
    string titulo;
    string assunto;
    string descricao;
    
    public: 
    Contato(date data, string titulo, string assunto, string descricao){
        this->data = data;
        this->titulo = titulo;
        this->assunto = assunto;
        this->descricao = descricao;
    }
    
    date getData(){
        return data;
    }
    string getTitulo(){
        return titulo;
    }
    string getAssunto(){
        return assunto;
    }
    string getDescricao(){
        return descricao;
    }
    
    void setData(date data){
        this->data=data;
    }
    void setTitulo(string titulo){
        this->titulo=titulo;
    }
    void setAssunto(string assunto){
        this->assunto = assunto;
    }
    void setDescricao(string descricao){
        this->descricao = descricao;
    }
    
    void notificaDestinatario(Pessoa & pessoa){
        cout << "notificacao " << Pessoa.getNome() << endl;
        cout << "assunto " << Contato.getAssunto() << endl;
    }
};

class Professor {
    private: 
    string titulacao;
    string linhaPesquisa;
    
    public: 
    Professor(string titulacao, string linhaPesquisa){
        this->titulacao = titulacao;
        this->linhaPesquisa = linhaPesquisa;
    }
    
    void setTitulacao(string titulacao){
        this->titulacao = titulacao;
    }
    void setLinhaPesquisa(string linhaPesquisa){
        this->linhaPesquisa=linhaPesquisa;
    }
    
    string getTitulacao(){
        return titulacao;
    }
    string getLinhaPesquisa(){
        return linhaPesquisa;
    }
};

